<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/pergamino_medio"
    tools:context="audiovisuales.aventuresengulpiyuri.JuegoPregunta">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/txPregunta"
        android:editable="false"
        android:text="@string/pregunta"
        android:textStyle="bold"
        android:width="700dp"
        android:textSize="38dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="84dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/respuesta1"
        android:id="@+id/btRespuesta1"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:width="700dp"
        android:textSize="30dp"
        android:textStyle="bold"
        android:background="@android:color/transparent" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/respuesta2"
        android:id="@+id/btRespuesta2"
        android:width="700dp"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_below="@+id/btRespuesta1"
        android:layout_marginTop="25dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/transparent" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/respuesta3"
        android:id="@+id/btRespuesta3"
        android:width="700dp"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_below="@+id/btRespuesta2"
        android:layout_marginTop="25dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/transparent" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:background="@drawable/busgosu"
        android:layout_alignTop="@+id/txPregunta"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/txPregunta"
        android:layout_toRightOf="@id/txPregunta"
        android:layout_marginLeft="20dp"/>
</RelativeLayout>
